// Prisma schema for the Express API
// Copied from backend/prisma/schema.prisma so this server can use the same DB models.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  price          String?
  bgColor        String?
  imageUrl       String?
  category       String
  discountActive Boolean  @default(false)
  discountValue  String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Order {
  id          Int      @id @default(autoincrement())
  items       Json
  totalAmount Decimal
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
